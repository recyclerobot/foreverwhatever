{
  "name": "foreverwhatever",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "author": {
    "name": "Recyclerobot",
    "email": "thijs@recyclerobot.com",
    "url": "https://recyclerobot.com"
  },
  "build": {
    "productName": "ForeverWhatever",
    "appId": "org.nerdlab.ForeverWhatever",
    "asar": false,
    "directories": {
      "app": "./"
    },
    "files": [
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "./index.html",
      "./main.js",
      "./shuffle.js",
      "./preload.js",
      "./downloads/*",
      "./db/videos.db"
    ],
    "mac": {
      "category": "art"
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "google-auth-library": "^5.5.1",
    "googleapis": "^44.0.0",
    "nedb": "^1.8.0",
    "ytdl-core": "^1.0.0"
  },
  "scripts": {
    "downloader": "node scripts/downloader/index.js",
    "scraper": "node scripts/scraper/index.js",
    "start": "DEV=true electron .",
    "cleanup": "find ./downloads -size 0 -delete",
    "pack": "electron-builder --dir",
    "dist": "DEBUG=electron-builder electron-builder -mw"
  },
  "devDependencies": {
    "electron": "^4.0.6",
    "electron-builder": "^22.1.0"
  }
}
